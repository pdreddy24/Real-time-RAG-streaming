{
  "uid": "rag-indexer",
  "title": "RAG Indexer - Reliability",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "Indexer UP",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        { "expr": "up{job=\"rag-indexer\"}", "refId": "A" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "stat",
      "title": "Seconds since last success",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        { "expr": "time() - rag_indexer_last_success_unixtime", "refId": "A" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "timeseries",
      "title": "Processed rate (msg/s)",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 7 },
      "targets": [
        { "expr": "rate(rag_indexer_processed_total[1m])", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Failures rate (msg/s)",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 7 },
      "targets": [
        { "expr": "rate(rag_indexer_failures_total[5m])", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "p95 processing latency (s)",
      "gridPos": { "x": 0, "y": 11, "w": 24, "h": 7 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(rag_indexer_processing_latency_seconds_bucket[5m])) by (le))",
          "refId": "A"
        }
      ]
    }
  ]
}
